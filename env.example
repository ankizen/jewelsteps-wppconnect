# WPPConnect Server Environment Variables
# Copy this file to .env and update the values

# Server Port
PORT=3000

# WhatsApp Session Name
SESSION_NAME=jewelsteps-session

# Sync Key (must match CRM database settings table)
SYNC_KEY=your-secret-sync-key-change-this-in-production

# CRM Webhook URL
CRM_WEBHOOK=https://crm.jewelsteps.com/api/whatsapp/sync.php

# Node Environment
NODE_ENV=production

# Optional: Chrome/Chromium executable path (if not in PATH)
# CHROME_PATH=/usr/bin/chromium-browser

